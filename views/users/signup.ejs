<% layout("/layouts/boilerplate")%>

<body>
    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h1 class="mb-3">SignUp to WanderLust:-</h1>
            <form method="post" action="/signup" novalidate class="needs-validation">
                <div class="mb-3 col-7">
                    <label for="username" class="form-label">Username:</label>&nbsp;&nbsp;&nbsp;
                    <input type="text" class="form-control" name="username" id="username"
                        placeholder="Enter the username" required>
                    <div class="valid-feedback">username looks good!</div>
                </div>
                <div class="mb-3 col-7">
                    <label for="email" class="form-label">Email:</label>&nbsp;&nbsp;&nbsp;<br>
                    <input type="email" name="email" class="form-control" id="email"
                        placeholder="Enter email..." required></input>
                    <div class="invalid-feedback">Enter valid email</div>
                </div>
                <div class="row">
                    <div class="mb-3 col-7">
                        <label for="password" class="form-label">Password:</label>&nbsp;&nbsp;&nbsp;
                        <input type="password" class="form-control" name="password" id="password"
                            placeholder="Enter password" required>
                        <div class="invalid-feedback">Enter a valid password.</div>
                    </div>
                </div>
                <button class="btn btn-dark mb-3">SignUp!</button>
            </form>
        </div>
    </div>
</body>